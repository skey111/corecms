                                <a href="javascript:;">@item.GroupName</a>
                                @foreach (var menu in item.Menus)
                                {
                                    if (menu.LinkUrl.StartsWith("/Inventoryes/StockInventoryTransfer"))
                                    {
                                        <dl class="layui-nav-child">
                                            <dd class="leftmenuitem">
                                                <a href="@menu.LinkUrl">
